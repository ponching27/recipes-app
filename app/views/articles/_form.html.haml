.container
    = simple_form_for @article, html: { multipart: true } do |f|
        - if @article.errors.any?
            #errors
            %p
                = @article.errors.count
                Prevented this article from saving
            %ul
                - @article.errors.full_messages.each do |msg|
                    %li= msg
        .container
            .panel-body
                = f.input :title, input_html: { class: 'form-control' }
                = f.input :body, input_html: { class: 'form-control' }
                = f.file_field :image, input_html: { class: 'form-control btn btn-default' }

            = f.button :submit, class: "btn btn-primary"
            %br
            %p
            = link_to "Back", root_path, class: "btn btn-danger"